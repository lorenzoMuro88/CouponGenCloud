# Server Configuration
PORT=3000

# Database Configuration
# SQLite database will be created automatically in data/coupons.db

# Authentication (Basic Auth for admin/store areas)
STORE_USER=admin
STORE_PASS=admin123

# Email Configuration
# Choose one of the following email providers:

# Option 1: Mailgun (Recommended)
MAIL_PROVIDER=mailgun
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_domain.mailgun.org
MAILGUN_FROM=CouponGen <no-reply@yourdomain.com>
MAILGUN_REGION=eu
MAILGUN_TRACKING=false
MAILGUN_REPLY_TO=support@yourdomain.com

# Option 2: SMTP (Alternative)
# MAIL_PROVIDER=smtp
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Option 3: Development (No real email sending)
# Leave all email settings empty to log emails to console

# Email Template
MAIL_SUBJECT=Il tuo coupon
MAIL_FROM=CouponGen <no-reply@example.com>
MAIL_TEST_TO=test@example.com

# Default Discount (if no campaign is specified)
DEFAULT_DISCOUNT_PERCENT=10

# Security Notes:
# - Change STORE_USER and STORE_PASS in production
# - Use strong passwords for authentication
# - Configure proper email settings for production
# - Consider using HTTPS in production
